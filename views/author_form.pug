extends layout

block content 
    h1= title 
    form(method="POST") 
        .form-group 
            label(for="first_name") First Name: 
            input.form-control#first_name(type="text" name="first_name" placeholder="John" value=(author === undefined ? "" : author.first_name)  required)
            label(for="family_name") Family Name: 
            input.form-control#family_name(type="text" name="family_name" placeholder="Doe" value=(author === undefined ? "" : author.family_name)  required)

        .form-group 
            label(for="date_of_birth") Date of birth: 
            input#date_of_birth.form-control(type="date" name="date_of_birth" value=(author === undefined ? "" : author.date_of_birth))
            label(for="date_of_death") Date of death: 
            input#date_of_death.form-control(type="date" name="date_of_death" value=(author === undefined ? "" : author.date_of_death))

        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            each error in errors 
                li!= error.msg